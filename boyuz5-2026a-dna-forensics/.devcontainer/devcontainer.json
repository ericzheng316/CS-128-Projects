{
  "name": "cs128",
  "image": "michaelrnowak/cpp-dev-container:latest",
  "customizations": {
    "vscode":{
      "settings": {
        "terminal.integrated.profiles.linux": {
          "bash": { "path": "/bin/bash" }
        },
        "files.eol": "\n",
        "github.copilot.enable": { "*": false },
        "chat.disableAIFeatures": true
      },
      "extensions": [
        "ms-vscode.cpptools",
        "cs128.cs128-clang-tidy",
        "xaver.clang-format",
        "cs128.lldb-debugger-args-escape-tool"
      ]
    }
  },
  "runArgs": [
    "--cap-add=SYS_PTRACE",
    "--security-opt",
    "seccomp=unconfined",
    "--rm"
  ]
}